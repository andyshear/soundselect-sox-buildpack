# echo 'export PATH="$PATH:vendor/libvorbis/bin"' >> $PROFILE_PATH
# echo 'export LD_LIBRARY_PATH="$LD_LIBRARY_PATH:vendor/libvorbis/lib"' >> $PROFILE_PATH
